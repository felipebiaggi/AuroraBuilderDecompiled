<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:options="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">
    <Style x:Key="FlowDocumentTextBlockStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="TextBlock.FontFamily" Value="Segoe UI"/>
        <Setter Property="TextBlock.FontSize" Value="10"/>
    </Style>
    <Style x:Key="InformationDocumentTitleStyle" TargetType="{x:Type TextBlock}"
         BasedOn="{StaticResource BaseTextBlockStyle}">
        <Setter Property="TextBlock.FontFamily" Value="Segoe UI SemiBold"/>
        <Setter Property="TextBlock.FontSize" Value="20"/>
    </Style>
    <Style x:Key="InformationDocumentTextStyle" TargetType="{x:Type TextBlock}"
         BasedOn="{StaticResource BaseTextBlockStyle}">
        <Setter Property="TextBlock.FontFamily" Value="Segoe UI Light"/>
    </Style>
    <Style x:Key="InformationDocumentFlavorTextStyle" TargetType="{x:Type TextBlock}"
         BasedOn="{StaticResource InformationDocumentTextStyle}">
        <Setter Property="TextBlock.FontStyle" Value="Italic"/>
    </Style>
</ResourceDictionary>