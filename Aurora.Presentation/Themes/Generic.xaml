<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:controls="clr-namespace:Aurora.Presentation.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Aurora.Presentation;component/Themes/GraphicalButtonTheme.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Aurora.Presentation;component/Themes/CommandButtonTheme.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <Style x:Key="{x:Type controls:GraphicalButton}" BasedOn="{StaticResource GraphicalButtonDefaultStyle}" TargetType="{x:Type controls:GraphicalButton}" />
    <Style x:Key="{x:Type controls:CommandButton}" BasedOn="{StaticResource CommandButtonDefaultStyle}" TargetType="{x:Type controls:CommandButton}" />
</ResourceDictionary>